---
interface Props {
  items: { label: string; href?: string }[];
}
const { items } = Astro.props;
---

<nav class="text-sm mb-4 text-gray-600">
  <ol class="flex gap-2">
    {items.map((item, i) => (
      <li>
        {item.href
          ? <a href={item.href} class="text-blue-600 hover:underline">{item.label}</a>
          : <span>{item.label}</span>}
        {i < items.length - 1 && <span class="mx-2">/</span>}
      </li>
    ))}
  </ol>
</nav>

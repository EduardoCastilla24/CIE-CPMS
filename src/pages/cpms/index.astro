---
import Layout from "@/layouts/Layout.astro";
import Filter from "@/components/Filter.tsx";
import rawData from "@/data/cpms.json";
import { adaptCpms } from "@/utils/adapters";

const data = adaptCpms(rawData);
---

<Layout
  title="CPMS | Catálogo de Procedimientos Médicos y Sanitarios en Perú - MINSA"
  heading="Catálogo de Procedimientos Médicos y Sanitarios (CPMS)"
  description=`El CPMS (Catálogo de Procedimientos Médicos y Sanitarios) organiza y codifica los procedimientos médicos del sector salud. 
                Aquí puedes explorar los capítulos, grupos y subcategorías de manera jerárquica.`
>
  <Filter client:load data={data} />
</Layout>

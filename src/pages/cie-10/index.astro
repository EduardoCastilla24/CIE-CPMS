---
import Layout from "@/layouts/Layout.astro";
import Filter from "@/components/Filter.tsx";
import rawData from "@/data/cie10.json";
import { adaptCie10 } from "@/utils/adapters";

const data = adaptCie10(rawData);
---

<Layout
  title="CIE-10"
  heading="Clasificación Internacional de Enfermedades (CIE-10)"
  description=`Explora la clasificación oficial de enfermedades y condiciones de salud.
    Usa el buscador para encontrar códigos o nombres, y expande los elementos
    para ver sus subcategorías.`
>
  <Filter client:load data={data} />
</Layout>

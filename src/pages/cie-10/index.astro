---
import Layout from "@/layouts/Layout.astro";
import Filter from "@/components/Filter.tsx";
import rawData from "@/data/cie10.json";
import { adaptCie10 } from "@/utils/adapters";

const data = adaptCie10(rawData);
---

<Layout
  title="MediQ Codes | CIE-10 | Clasificación Internacional de Enfermedades en Perú - MINSA"
  heading="Clasificación Internacional de Enfermedades (CIE-10)"
  description=`El CIE-10 (Clasificación Internacional de Enfermedades) es un estándar mundial para registrar y codificar enfermedades y problemas de salud.
                "MediQ Codes" es un catalogo que te ayuda a explorar los capítulos, grupos y subcategorías de manera jerárquica.`

>
  <Filter client:load data={data} />
</Layout>

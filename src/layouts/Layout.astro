---
import { ClientRouter } from "astro:transitions";

import "../styles/global.css";

import Navbar from "@/components/astro/Navbar.astro";
import Breadcrumbs from "@/components/astro/Breadcrumbs.astro";

interface Props {
  title?: string;
  heading?: string;
  breadcrumbs?: { label: string; href?: string }[];
}

const { title = "Astro Basics", heading, breadcrumbs = [] } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="bg-background w-full h-fit md:h-[calc(100dvh-4rem)] flex flex-col items-center antialiased"
  >
  <ClientRouter />

    <Navbar />

    <main class="px-8 lg:px-0 lg:w-[60rem] top-24 relative">
      {breadcrumbs.length > 0 && <Breadcrumbs items={breadcrumbs} />}
      {heading && <h2 class="text-2xl font-bold" transition:name={`title_${heading}`}>{heading}</h2>}
      <slot />
    </main>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
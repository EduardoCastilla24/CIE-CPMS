---
import { ClientRouter } from "astro:transitions";

import "../styles/global.css";

import Navbar from "@/components/Navbar.astro";
import InfoCard from "@/components/InfoCard.astro";
interface Props {
  title?: string;
  heading?: string;
  breadcrumbs?: { label: string; href?: string }[];
  description?: string;
}

const { title = "", heading, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/assets/logos/iso_DevCast.svg" />
    <title>Cat√°logo {title}</title>
  </head>

  <body
    class="bg-background w-full h-fit md:h-[calc(100dvh-4rem)] flex flex-col items-center antialiased"
  >
    <ClientRouter />

    <Navbar />

    <main class="px-8 lg:px-0 w-full lg:w-[60rem] top-24 relative">
      <!-- TEXTOS DE INFORMACION -->
      <div class="space-y-6">
        <!-- TITULO -->
        <h2 class="text-lg md:text-2xl font-bold">
          {heading}
        </h2>
        <!-- DESCRIPCION -->
        <p class="text-sm leading-5">{description}</p>
        <!-- INFO CARD -->
        <InfoCard />
      </div>
      <!-- SLOT -->
      <slot />
    </main>
  </body>
</html>
